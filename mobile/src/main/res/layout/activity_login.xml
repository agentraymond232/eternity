<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context="io.ashdavies.eternity.signin.SignInActivity">

  <TextView
      style="@style/Theme.Eternity.TextAppearance.Quote"
      android:id="@+id/quote"
      android:layout_margin="@dimen/default_margin_large"
      android:text="@string/quote_randal_munroe"/>

  <com.google.android.gms.common.SignInButton
      android:id="@+id/action_sign_in"
      android:layout_gravity="bottom"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_margin"
      app:buttonSize="wide"/>

</LinearLayout>
